program root_;

var
  eps: real;

type
  Func = function(x: real): real;{–æ–ø–∏—Å–∞–Ω–∏–µ —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω–æ–≥–æ —Ç–∏–ø–∞}

{–°–∞–º–∏ —Ñ—É–Ω–∫—Ü–∏–∏ –∫–∞–∫ F1,F2,F3}
{$F+}
function F1(x: real): real;
begin
  F1 := 0.6 * x + 3; 
end;
{$F+}
function F2(x: real): real;
begin
  F2 := power(x - 2, 3) - 1; 
end;
{$F+}
function F3(x: real): real;
begin
  F3 := 3 / x; 
end;
{–ö–æ–Ω–µ—Ü —Ñ—É–Ω–∫—Ü–∏–π}

{–ü—Ä–æ–∏–∑–≤–æ–¥–Ω—ã–µ –ø–µ—Ä–≤–æ–≥–æ –ø–æ—Ä—è–¥–∫–∞}
{$F+}
function F1_der1(x: real): real;
begin
  F1_der1 := 0.6; 
end;
{$F+}
function F2_der1(x: real): real;
begin
  F2_der1 := 3 * (x - 2) * (x - 2); 
end;
{$F+}
function F3_der1(x: real): real;
begin
  F3_der1 := -3 / (x * x); 
end;
{–∫–æ–Ω–µ—Ü –ø—Ä–æ–∏–∑–≤–æ–¥–Ω—ã—Ö –ø–µ—Ä–≤–æ–≥–æ –ø–æ—Ä—è–¥–∫–∞} 
{$F+}
function root(f, g, f1, g1: func; a, b: real): real;
{$F+}
  function fg(x: real): real;{–í–ª–æ–∂–µ–Ω–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –≤—ã—á–∏—Å–∏–ª—è—é—â–∞—è —Ä–∞–∑–Ω–æ—Å—Ç—å ùëì(ùë•) ‚àí ùëî(ùë•)}
  begin
    fg := f(x) - g(x);
  end;
  {$F+}
  function fg1(x: real): real;
  begin
    fg1 := f1(x) - g1(x); {–í–ª–æ–∂–µ–Ω–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –≤—ã—á–∏—Å–∏–ª—è—é—â–∞—è —Ä–∞–∑–Ω–æ—Å—Ç—å ùëì'(ùë•) ‚àí ùëî'(ùë•)}
  end;

var
  x: real;
begin
  if not (((fg(a) < 0) and (fg((a + b) / 2) < (fg(a) + fg(b)) / 2)) or ((fg(a) > 0) and (fg((a + b) / 2) > (fg(a) + fg(b)) / 2))) then begin x := a;a := b;b := x; end;
  {–ï—Å–ª–∏ —ç—Ç–æ –Ω–µ –ø–µ—Ä–≤—ã–π —Å–ª—É—á–∞–π, –≥–¥–µ —Ñ—É–Ω–∫—Ü–∏—è –≤–æ–∑—Ä–∞—Å—Ç–∞–µ—Ç –∏ –µ–µÃà –≥—Ä–∞—Ñ–∏–∫ —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω –Ω–∏–∂–µ
—Ö–æ—Ä–¥—ã –∏–ª–∏ –µ—Å–ª–∏ —Ñ—É–Ω–∫—Ü–∏—è —É–±—ã–≤–∞–µ—Ç –∏ –µ–µÃà –≥—Ä–∞—Ñ–∏–∫ —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω –≤—ã—à–µ —Ö–æ—Ä–¥—ã, —Ç–æ –ø–æ–º–µ–Ω—è–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ a –∏ b}
  while abs(a - b) > eps do 
  begin
    a := a - (fg(a) * (b - a)) / (fg(b) - fg(a));{–ü—Ä–∏–±–ª–∏–∂–µ–Ω–∏–µ "–∞" –º–µ—Ç–æ–¥–æ–º —Ö–æ—Ä–¥ (–¥–∞–µ—Ç –ø—Ä–∏–±–ª–∏–∂–µ–Ω–∏–µ —Å –Ω–µ–¥–æ—Å—Ç–∞—Ç–∫–æ–º)} 
    b := b - (fg(b) / (fg1(b))){–ü—Ä–∏–±–ª–∏–∂–µ–Ω–∏–µ "b" –º–µ—Ç–æ–¥–æ–º –∫–∞—Å–∞—Ç–µ–ª—å–Ω—ã—Ö (–¥–∞–µ—Ç –ø—Ä–∏–±–ª–∏–∂–µ–Ω–∏–µ —Å –∏–∑–±—ã—Ç–∫–æ–º)}
  end; 
  root := (a + b) / 2;{–ü–æ–∫–∞ –æ—Ç—Ä–µ–∑–æ–∫ [a,b]–±–æ–ª—å—à–µ —á–µ–º eps,
  –º—ã —É–º–µ–Ω—à–∏–º –µ–≥–æ –¥–æ —Ç–µ—Ö –ø–æ—Ä, –ø–æ–∫–∞ –¥–ª–∏–Ω–∞ –æ—Ç—Ä–µ–∑–∫–∞ [a,b]
  —Å—Ç–∞–Ω–µ—Ç –Ω–µ –º–µ–Ω—å—à–µ eps, —Ç–æ–≥–¥–∞ –º—ã –º–æ–∂–µ–º –≤—ã–±—Ä–∞—Ç—å –ø—Ä–æ–∏–∑–≤–æ–ª—å–Ω—É—é —Ç–æ—á–∫—É –∏–∑ –æ—Ç—Ä–µ–∑–∫–∞ [a,b], –Ω–∞–ø—Ä–∏–º–µ—Ä:(a+b)/2}
end;

begin
  eps := 0.0001; 
  write(root(F2, F3, F2_der1, F3_der1, -1, -0.1));
end.




